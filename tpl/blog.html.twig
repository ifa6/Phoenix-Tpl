{% extends 'layout.html.twig' %}

{% block content %}
<div class="row" id="blog">
    <div class="col-sm-3" id="list">
        <div class="panel-group" id="list-accordion">
            {% for year, entries in list %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#list-accordion" href="#collapse{{ year }}">{{ year }}</a>
                    </div>
                    <div id="collapse{{ year }}" class="panel-collapse collapse">
                        <div class="panel-body">
                            {% for e in entries %}
                                <a href="{{ e.link }}"><span class="date">{{ e.date }}</span> {{ e.name }}</a><br />
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <script>
            $(function() {
                // open first collapse
                $('div#blog div#list-accordion > :first-child > :first-child').next().addClass('in');
            });
        </script>
    </div>
    <div class="col-sm-9" id="entry">
        {{ blog|raw }}
    </div>
</div>
{% endblock %}
